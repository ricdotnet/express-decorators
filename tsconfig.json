{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
//    "allowJs": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ]
}
