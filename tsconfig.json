{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "types": [
    "node",
    "express",
    "reflect-metadata"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*"
  ]
}
